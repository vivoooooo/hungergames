<h1>Edit Account</h1>
<% if @user.errors.any? %>
  <ol>
    <% @user.errors.full_messages.each do |msg| %>
  
      <div class="form-group">
        <%= msg %>
        </div>

    <% end %>
  </ol>
<% end %>

<%= form_for(@user) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation%>

  <%= f.submit "Edit my account" %>
<% end %>

